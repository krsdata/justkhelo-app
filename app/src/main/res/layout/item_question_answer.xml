<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/_10sdp"
    android:paddingTop="@dimen/_3sdp"
    android:paddingEnd="@dimen/_10sdp"
    android:paddingBottom="@dimen/_3sdp">

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        app:layout_constraintTop_toBottomOf="@+id/question">

    </RadioGroup>
    <TextView
        android:id="@+id/winning_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="o"
        android:textSize="@dimen/dimen_11sp"
        android:textColor="#363636"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/dimen_2dp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/radio_group"
        app:layout_constraintEnd_toEndOf="@id/radio_group"/>
    <ImageView
        android:id="@+id/img_doller"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_20dp"
        android:src="@drawable/success"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@id/winning_amount"
        app:layout_constraintTop_toTopOf="@id/winning_amount"
        app:layout_constraintBottom_toBottomOf="@id/winning_amount"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Participate and Win "
        android:textSize="@dimen/dimen_11sp"
        android:textColor="#363636"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/img_doller"
        app:layout_constraintTop_toTopOf="@id/winning_amount"
        app:layout_constraintBottom_toBottomOf="@id/winning_amount"/>

</androidx.constraintlayout.widget.ConstraintLayout>