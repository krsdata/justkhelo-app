<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginTop="@dimen/matches_view_top_margin"
    android:layout_marginEnd="@dimen/_8sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="6dp"
    app:cardElevation="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_3sdp">

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tournament_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:singleLine="true"
                android:text="Cricket League T10"
                android:textColor="@color/text"
                android:textSize="@dimen/small_info_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@color/background_default" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_86sdp"
            android:layout_below="@id/ll_title"
            android:orientation="horizontal"
            android:weightSum="5"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/countrycolorview"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:background="@color/red"
                        android:visibility="gone"/>

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/teama_logo"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/flag_indian"
                        app:civ_border="true"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="3dp"
                        app:civ_circle_color="@color/white"
                        app:civ_circle_color_end="@color/white"
                        app:civ_circle_color_start="@color/white" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/upcoming_opponent1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="IND"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/upcoming_match_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:text="LINE UP"
                    android:textColor="@color/green"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/contest_leader_board"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/match_leaderboard"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/upcoming_match_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="1D:24H:30M:40S"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/match_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:minWidth="@dimen/_60sdp"
                    android:paddingStart="@dimen/_7sdp"
                    android:paddingEnd="@dimen/_7sdp"
                    android:text="7:30PM"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/countrybcolorview"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:background="@color/red"
                        android:visibility="gone"/>

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/teamb_logo"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/flag_indian"
                        app:civ_border="true"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="3dp"
                        app:civ_circle_color="@color/white"
                        app:civ_circle_color_end="@color/white"
                        app:civ_circle_color_start="@color/white" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/upcoming_opponent2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="IND"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/opp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/upcoming_linear_contest_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/matches_view_left_margin_inner"
        android:layout_marginTop="@dimen/matches_gap_between_each_views"
        android:layout_marginEnd="@dimen/matches_view_right_margin_inner"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/upcoming_contest_name"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:background="@color/green_light"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:padding="3dip"
            android:text="Mega"
            android:textColor="@color/white"
            android:textSize="@dimen/small_info_size" />

        <TextView
            android:id="@+id/upcoming_contest_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dip"
            android:fontFamily="@font/montserrat_bold"
            android:text="â‚¹1Crore"
            android:textColor="@color/black"
            android:textSize="@dimen/small_info_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/free_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:background="@drawable/home_free_view"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:padding="3dp"
        android:text="Win smart watch"
        android:textColor="@color/green"
        android:textSize="@dimen/_9sdp" />
</androidx.cardview.widget.CardView>