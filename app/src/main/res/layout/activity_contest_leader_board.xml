<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="contentviews"
            type="justkhelo.cricks.ContestLeaderBoardActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_bottom_rounded"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leaderboard"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/img_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_back" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/bg_rounded_corner"
            android:orientation="horizontal"
            android:layout_marginVertical="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/_4sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:backgroundTint="#4716a5"
            app:layout_constraintBottom_toBottomOf="@+id/img_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_back" >
            <ImageView
                android:id="@+id/img_rupee"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/rupee"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_wallet_amount"
                app:layout_constraintBottom_toBottomOf="@id/txt_wallet_amount"/>
            <TextView
                android:id="@+id/txt_wallet_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="101 pts"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/_5sdp"
                android:backgroundTint="@color/progress_start_color"
                app:layout_constraintStart_toEndOf="@id/img_rupee"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/spinner_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingHorizontal="@dimen/_5sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:background="@drawable/bg_rounded_corner"
            android:backgroundTint="#1b24a3"
            app:layout_constraintEnd_toEndOf="@+id/linear1"
            app:layout_constraintStart_toStartOf="@+id/img_back"
            app:layout_constraintTop_toBottomOf="@+id/img_back">
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dropDownSelector="@color/purple"
                android:backgroundTint="@color/white"
                />
        </FrameLayout>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/img_second_winner"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_55sdp"
            android:layout_marginBottom="@dimen/_75sdp"
            android:scaleType="centerCrop"
            android:padding="@dimen/_1sdp"
            app:civ_border="true"
            app:civ_border_width="@dimen/dimen_2dp"
            app:civ_border_color="#06ff72"
            android:src="@drawable/ic_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/img_third_winner"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_container"
             />

        <TextView
            android:id="@+id/txt_2"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_minus12sdp"
            android:background="@drawable/bg_circle"
            android:backgroundTint="#7CFC00"
            android:gravity="center"
            android:text="2"
            android:padding="@dimen/_1sdp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_10sp"
            app:layout_constraintEnd_toEndOf="@+id/img_second_winner"
            app:layout_constraintStart_toStartOf="@+id/img_second_winner"
            app:layout_constraintTop_toBottomOf="@+id/img_second_winner" />
        <TextView
            android:id="@+id/txt_winner2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_8sp"
            android:maxLines="1"
            android:maxLength="12"
            android:fontFamily="@font/poppins_regular"
            android:textStyle="bold"
            android:text="anamika"
            android:textAlignment="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/txt_2"
            app:layout_constraintStart_toStartOf="@+id/img_second_winner"
            app:layout_constraintEnd_toEndOf="@+id/img_second_winner"
            />
        <TextView
            android:id="@+id/txt_winner2_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_8sp"
            android:text="220"
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/txt_winner2"
            app:layout_constraintStart_toStartOf="@+id/txt_winner2"
            app:layout_constraintEnd_toEndOf="@+id/txt_winner2"
            />


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/img_third_winner"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:scaleType="centerCrop"
            android:padding="@dimen/_1sdp"
            app:civ_border="true"
            app:civ_border_width="@dimen/dimen_2dp"
            app:civ_border_color="#0bccff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_second_winner"
            app:layout_constraintTop_toTopOf="@+id/img_second_winner"
            android:src="@drawable/ic_profile" />

        <TextView
            android:id="@+id/txt_3"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_10sp"
            android:textAlignment="center"
            android:background="@drawable/bg_circle"
            android:backgroundTint="#0bccff"
            android:layout_marginTop="@dimen/_minus12sdp"
            android:padding="@dimen/_1sdp"
            app:layout_constraintTop_toBottomOf="@+id/img_third_winner"
            app:layout_constraintStart_toStartOf="@+id/img_third_winner"
            app:layout_constraintEnd_toEndOf="@+id/img_third_winner"
            android:gravity="center" />
        <TextView
            android:id="@+id/txt_winner3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_8sp"
            android:text="Pinky"
            android:fontFamily="@font/poppins_regular"
            android:maxLines="1"
            android:maxLength="12"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/txt_3"
            app:layout_constraintStart_toStartOf="@+id/img_third_winner"
            app:layout_constraintEnd_toEndOf="@+id/img_third_winner"
            />
        <TextView
            android:id="@+id/txt_winner3_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_8sp"
            android:text="220"
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/txt_winner3"
            app:layout_constraintStart_toStartOf="@+id/txt_winner3"
            app:layout_constraintEnd_toEndOf="@+id/txt_winner3"
            />


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/img_first_winner"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_minus25sdp"
            android:scaleType="centerCrop"
            android:padding="@dimen/_1sdp"
            android:src="@drawable/ic_profile"
            app:civ_border="true"
            app:civ_border_width="@dimen/dimen_2dp"
            app:civ_border_color="#e19309"
            app:layout_constraintEnd_toStartOf="@+id/img_third_winner"
            app:layout_constraintStart_toEndOf="@+id/img_second_winner"
            app:layout_constraintTop_toTopOf="@+id/img_second_winner"
            />
        <ImageView
            android:id="@+id/img_king"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/king"
            android:layout_marginBottom="@dimen/_3sdp"
            app:layout_constraintStart_toStartOf="@id/img_first_winner"
            app:layout_constraintEnd_toEndOf="@id/img_first_winner"
            app:layout_constraintBottom_toTopOf="@id/img_first_winner"/>

        <TextView
            android:id="@+id/txt_1"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_10sp"
            android:textAlignment="center"
            android:background="@drawable/bg_circle"
            android:backgroundTint="#e19309"
            android:padding="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_minus12sdp"
            app:layout_constraintTop_toBottomOf="@+id/img_first_winner"
            app:layout_constraintStart_toStartOf="@+id/img_first_winner"
            app:layout_constraintEnd_toEndOf="@+id/img_first_winner"
            android:gravity="center" />
        <TextView
            android:id="@+id/txt_winner1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_11sp"
            android:text="Riya"
            android:maxLines="1"
            android:maxLength="12"
            android:fontFamily="@font/poppins_regular"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/txt_1"
            app:layout_constraintStart_toStartOf="@+id/img_first_winner"
            app:layout_constraintEnd_toEndOf="@+id/img_first_winner"
            />
        <TextView
            android:id="@+id/txt_winner1_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_10sp"
            android:text="240"
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/txt_winner1"
            app:layout_constraintStart_toStartOf="@+id/txt_winner1"
            app:layout_constraintEnd_toEndOf="@+id/txt_winner1"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recycler_matches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_corner"
            android:backgroundTint="#4928ac"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:padding="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout">

            <TextView
                android:id="@+id/txt_rank1"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:text="Rs.13,000"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_8sp"
                android:maxLines="1"
                android:textAlignment="center"
                android:background="@drawable/bg_rounded_corner"
                android:backgroundTint="#260094"
                android:padding="@dimen/_3sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/_20sdp"
                app:layout_constraintStart_toStartOf="parent"/>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="@drawable/bg_rounded_corner"
               android:backgroundTint="@color/white"
               android:padding="@dimen/_2sdp"
               android:gravity="center_vertical"
               app:layout_constraintStart_toStartOf="@+id/txt_rank1"
               app:layout_constraintBottom_toTopOf="@+id/txt_rank1">
               <ImageView
                   android:layout_width="@dimen/_5sdp"
                   android:layout_height="@dimen/_5sdp"
                   android:layout_gravity="center_vertical"
                   android:src="@drawable/king"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Rank1"
                   android:layout_gravity="center_vertical"
                   android:gravity="center_vertical"
                   android:layout_marginLeft="@dimen/_1sdp"
                   android:textColor="@color/black"
                   android:textSize="@dimen/dimen_5sp" />

           </LinearLayout>
            <TextView
                android:id="@+id/txt_rank2"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:text="Rs.13,000"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:maxLines="1"
                android:textSize="@dimen/dimen_8sp"
                android:background="@drawable/bg_rounded_corner"
                android:backgroundTint="#260094"
                android:padding="@dimen/_3sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_rank1"
                app:layout_constraintEnd_toStartOf="@+id/txt_rank3"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_rounded_corner"
                android:backgroundTint="@color/white"
                android:padding="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_1sdp"
                app:layout_constraintStart_toStartOf="@+id/txt_rank2"
                app:layout_constraintBottom_toTopOf="@+id/txt_rank2">
                <ImageView
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/king"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rank2"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_5sp"
                android:background="@drawable/bg_rounded_corner"
                android:backgroundTint="@color/white"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_rank3"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:text="Rs.13,000"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_8sp"
                android:textAlignment="center"
                android:maxLines="1"
                android:background="@drawable/bg_rounded_corner"
                android:backgroundTint="#260094"
                android:padding="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_rounded_corner"
                android:backgroundTint="@color/white"
                android:padding="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_1sdp"
                app:layout_constraintStart_toStartOf="@+id/txt_rank3"
                app:layout_constraintBottom_toTopOf="@+id/txt_rank3">
            <ImageView
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_5sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/king"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rank3"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_5sp"
                android:background="@drawable/bg_rounded_corner"
                android:backgroundTint="@color/white"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/_1sdp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/txt_all_user_ranking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="All user Ranking"
            android:textColor="#3136a2"
            android:textSize="@dimen/dimen_12sp"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            app:layout_constraintEnd_toEndOf="@+id/recycler_matches"
            app:layout_constraintStart_toStartOf="@+id/recycler_matches"
            app:layout_constraintTop_toBottomOf="@+id/recycler_matches" />
    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:background="#808080"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@+id/txt_all_user_ranking"
        app:layout_constraintStart_toStartOf="@+id/recycler_matches"
        app:layout_constraintEnd_toEndOf="@+id/recycler_matches"/>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/contest_filter_refresh"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintStart_toStartOf="@+id/recycler_matches"
        app:layout_constraintEnd_toEndOf="@+id/recycler_matches">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutAnimation="@anim/layout_animation" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>