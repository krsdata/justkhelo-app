<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="contentviews"
            type="justkhelo.cricks.ui.login.LoginScreenActivity" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_cricket">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_65sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/header_logo_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/welcome_to_justkhelo"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="normal"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/login_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_40sdp"
            android:background="@drawable/ractangle_white_top_curve"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            tools:layout_editor_absoluteX="0dp">

            <Button
                android:id="@+id/sign_in_with_phone_button"
                android:layout_width="@dimen/_230sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/ractangle_curve_bg"
                android:backgroundTint="#193db5"
                android:drawableStart="@drawable/ic_phone_svg"
                android:drawableTint="@color/white"
                android:paddingStart="@dimen/_10sdp"
                android:text="@string/login_with_mobile_number"
                android:textColor="#ffffff"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:targetApi="m" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="#616161"
                android:textSize="16sp"
                android:textStyle="normal"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_in_with_phone_button"
                android:text="@string/or" />

            <View
                android:layout_width="157dp"
                android:layout_height="1dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="#d4d4d4"
                app:layout_constraintBottom_toBottomOf="@+id/textView8"
                app:layout_constraintEnd_toStartOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="@+id/textView8" />

            <View
                android:layout_width="157dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="#d4d4d4"
                app:layout_constraintBottom_toBottomOf="@+id/textView8"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="@+id/textView8" />

            <Button
                android:id="@+id/sign_in_button"
                android:layout_width="@dimen/_230sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/ractangle_curve_bg"
                android:backgroundTint="#cf4332"
                android:drawableStart="@drawable/ic_google_plus"
                android:paddingStart="@dimen/_10sdp"
                android:text="@string/sign_in_with_google"
                android:textColor="#ffffff"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:gravity="center_horizontal"
                android:textColor="#707070"
                android:textSize="10sp"
                android:textStyle="normal"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_in_button"
                android:text="@string/by_logging_in_you_accept_you_are_18_amp_agree_to_our" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10">
                <TextView
                    android:id="@+id/terms_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#707070"
                    android:textSize="10sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/poppins_regular"
                    android:letterSpacing="0.1"
                    android:text="@string/t_c" />
                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#707070"
                    android:textSize="10sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:text="@string/aand" />
                <TextView
                    android:id="@+id/privacy_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#707070"
                    android:textSize="10sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/privacy" />

            </LinearLayout>


            <TextView
                android:id="@+id/txt_trouble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:text="@string/need_help"
                android:layout_marginBottom="@dimen/_16sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <View android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/txt_trouble"
                app:layout_constraintStart_toStartOf="@id/txt_trouble"
                app:layout_constraintEnd_toEndOf="@id/txt_trouble"
                android:background="#d4d4d4"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>